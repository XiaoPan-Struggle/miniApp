    class="item_title {{item.isActive ? 'active' : ''}}"
    wx:for="{{tabs}}"
    wx:key="id"
    bindtap="handleItemTap"
    data-index="{{index}}"
    >{{item.value}}</view>
  </view>
  <view class="goods_item_content"></view>
</view>

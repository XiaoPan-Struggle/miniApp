page {
  padding: 20rpx;
  background-color: #dbdedb;
}
.search_row {
  height: 80rpx;
  display: flex;
}
.search_row input {
  flex: 1;
  height: 100%;
  padding: 0 10rpx;
  background-color: #fff;
}
.search_row button#btn {
  width: 110rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_content {
  margin-top: 20rpx;
  background-color: #fff;
}
.search_content .search_item {
  padding: 20rpx 10rpx;
  border-bottom: 2rpx solid #e5e5e5;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
